#!/bin/bash

# Check if the script is run as root
if [ "$(id -u)" != "0" ]; then
    echo "This script must be run as root."
    exit 1
fi

# Define the desired host and IP mappings
localhost_mapping="127.0.0.2 localhost"
facebook_mapping="8.8.8.8 facebook.com"

# Append the mappings to the /etc/hosts file
echo "$localhost_mapping" >> /etc/hosts
echo "$facebook_mapping" >> /etc/hosts

# Check if the mappings were added successfully
if [ $? -eq 0 ]; then
    echo "Hosts file updated successfully."
else
    echo "Failed to update hosts file."
    exit 1
fi

