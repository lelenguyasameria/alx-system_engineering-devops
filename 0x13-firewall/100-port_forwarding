#!/bin/bash

# This script configures UFW to redirect traffic from port 8080 to port 80.
# It also allows SSH, HTTP, and HTTPS traffic.

# Install UFW (if not already installed)
sudo apt-get update
sudo apt-get install ufw -y

# Set default policies
sudo ufw default deny incoming
sudo ufw default allow outgoing

# Allow SSH (port 22), HTTP (port 80), and HTTPS (port 443)
sudo ufw allow 22
sudo ufw allow 80
sudo ufw allow 443

# Enable UFW
sudo ufw enable

# Add port forwarding rule from 8080 to 80
echo "net.ipv4.ip_forward=1" | sudo tee -a /etc/ufw/sysctl.conf
sudo sysctl -p

sudo ufw route allow proto tcp from any to any port 8080

