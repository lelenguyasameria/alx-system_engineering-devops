echo "# Block all incoming traffic by default" > ~/alx-system_engineering-devops/0x13-firewall/0-block_all_incoming_traffic_but
echo "sudo ufw default deny incoming" >> ~/alx-system_engineering-devops/0x13-firewall/0-block_all_incoming_traffic_but
echo "" >> ~/alx-system_engineering-devops/0x13-firewall/0-block_all_incoming_traffic_but
echo "# Allow incoming traffic on specific ports" >> ~/alx-system_engineering-devops/0x13-firewall/0-block_all_incoming_traffic_but
echo "sudo ufw allow 22/tcp     # SSH" >> ~/alx-system_engineering-devops/0x13-firewall/0-block_all_incoming_traffic_but
echo "sudo ufw allow 443/tcp    # HTTPS SSL" >> ~/alx-system_engineering-devops/0x13-firewall/0-block_all_incoming_traffic_but
echo "sudo ufw allow 80/tcp     # HTTP" >> ~/alx-system_engineering-devops/0x13-firewall/0-block_all_incoming_traffic_but
echo "" >> ~/alx-system_engineering-devops/0x13-firewall/0-block_all_incoming_traffic_but
echo "# Enable ufw" >> ~/alx-system_engineering-devops/0x13-firewall/0-block_all_incoming_traffic_but
echo "sudo ufw enable" >> ~/alx-system_engineering-devops/0x13-firewall/0-block_all_incoming_traffic_but

