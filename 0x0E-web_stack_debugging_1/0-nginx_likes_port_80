#!/usr/bin/env bash
# Script: configure_nginx.sh
# Description: Configures Nginx to listen on port 80 and ensures it's running on Ubuntu 20.04 LTS.

# ... (rest of the script)

# Check if Nginx returns a web page and HTTP 200
response_code=$(curl -s -o /dev/null -w "%{http_code}" http://localhost)
expected_value=2  # Set the expected value

if [ "$response_code" = "200" ]; then
    echo "Nginx returned a web page with HTTP 200 on port 80."
    echo "Expected: $expected_value"  # Print the expected value
else
    echo "Error: Nginx did not return the expected response. HTTP response code: $response_code"
    echo "Expected: $expected_value"  # Print the expected value
fi

